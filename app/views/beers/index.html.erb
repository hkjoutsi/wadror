<p id="notice"><%= notice %></p>

<h1>Listing beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, Brewery.find(beer.brewery_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:"btn btn-primary" if current_user %><br> <!--  = unless current_user.nil? -->
<%= link_to 'List of breweries', breweries_path %>
