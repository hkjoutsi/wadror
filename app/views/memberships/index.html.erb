<p id="notice"><%= notice %></p>

<h1>Listing Memberships</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer club</th>
      <th>User</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.beer_club.name, membership.beer_club %></td>
        <td><%= membership.user.username %></td>
        <td><span class="label label-info"><%= membership.confirmed %></span></td>
        <td><%= link_to 'Show', membership %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Join a club!', new_membership_path, class:"btn btn-primary" %>
