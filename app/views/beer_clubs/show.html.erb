<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<div>Members of <i><%= @beer_club.name %></i>
	<ul>
	 <% @beer_club.members.each do |member| %>
	 	
	   <li><%= link_to member.username, member %> </li>
	 <% end %>
	</ul>
</div>

<div>
	<% unless current_user.nil? %>
		<% unless current_user.beer_clubs.include?(@beer_club) %>
			
			<%= form_for(@membership) do |f| %>
			    <%= f.hidden_field :beer_club_id %>
			    <%= f.submit value:"join the club", class:"btn btn-primary" %>
			<% end %>
		<% else %>
			<%= form_for(@membership, method: "delete") do |f| %>
				<%= f.hidden_field :beer_club_id %>
				<%= f.submit value: "end the membership", class:"btn btn-primary" %>
	   		<% end %>
		<% end %>
	<% end %>
</div>

<br>
<div>
  <%= edit_and_destroy_buttons(@beer_club) %>
</div>
